@import './reset.styl'
//@import './fonts.styl'

body
  font-family 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  font-weight 400
  color #20212B

h1, h2, h3, h4, h5, h6
  font-family 'Roboto'
  font-weight 400
  
.button-assertive, .button-info
    color #fff!important
    
.muted
  margin-left 15px
  font-size 15px

#wrap
  padding-top 15px
  padding-left 280px
  height 100%

#header
  position fixed
  z-index 90
  top 0
  left 0
  width 100%
  height 100px

#sidebar
  background-color #f9f9f9
  position fixed
  z-index 2
  top 73px
  left 0
  bottom 0
  width 300px
  padding 20px 30px
  overflow-x hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch
  -ms-overflow-style none
  &::-webkit-scrollbar
      width 0 !important

#content
  padding 20px 30px
  position relative

#mobile-header
  z-index 3
  
#mobile-shade
  z-index 1
  display none
  pointer-events none
  opacity 0
  transition opacity .3s ease
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0,0,0,.4)

.search-box.st-default-search-input
  width 200px
  background-color #fff
  outline none
  font-family 'ProximaNova-Regular'
  font-size 14px
  padding 7px 12px 6px 32px
  border-radius 20px
  border 1px solid #ddd
  background url(../images/search.png) 8px 6px no-repeat
  background-size 20px
  transition border-color .25s ease
  &:focus
    border-color #196ACC

.navbar
  h1
    margin-bottom 0!important
.box-container
  display table
  width 100%
  .button, .badge
    float left
    margin 0 5px 0 0
.boxer
  height 115px
.blue
  background blue
.red
  background red
.green
  background green
.yellow
  background yellow
.orange
  background orange

.colors
  ul
    margin 0!important;
    padding 0!important;
  li
    list-style none
  .hex
    display block
    font-size 13px
  .col-xs-4
    margin-bottom 20px
  .main-color
    padding 30px 10px!important
  .color
    padding 10px
    border-radius 2px
  .shade
    float right
    font-weight 600
    font-size 14px

// components
@import './header.styl'
@import './sidebar.styl'
@import './content.styl'
@import './syntax.styl'
@import './mobile.styl'