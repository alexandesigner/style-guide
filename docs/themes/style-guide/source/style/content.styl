code-font()
  font-family Menlo, Monaco, Consolas, "Courier New", monospace
  font-size 0.8em
  line-height 1.6em

#content
  max-width 760px
  margin 0px auto
  -webkit-text-size-adjust 100%

  em
    font-style italic

  strong
    font-family 'ProximaNova-Bold'

  h1, h2, h3, h4, h5, h6, p, ul, ol, figure
    margin 15px 0
    line-height 1.4em

  h1
    font-size 2.6em
    margin-top 0
    margin-bottom 0

  h2
    font-size 2em
    margin-top 30px
    padding-bottom 10px
    border-bottom 1px solid #eee
    
    &:first-child
      margin-top 15px

  h3
    font-size 1.6em
    margin-top 30px

  h2
    .anchor 
      top 12px!important
  h2, h3
    position relative
    .anchor
      opacity 0
      position absolute
      font-size 26px
      top 8px
      left -26px
    &:hover
      .anchor
        opacity 1

  ul, ol
    padding-left 1.5em
    li
      margin-bottom 5px

  ul
    list-style-type disc

  ol
    list-style-type decimal

  a
    color #196ACC

  img
    max-width 100%

  code
    code-font()
    padding 1px 4px
    background-color #eee
    margin 0 2px

  blockquote
    padding-left 1.3em
    border-left #eee solid 0.2em
    font-style italic

  .edit-discuss-links
    margin-bottom 20px
    margin-top 10px

  .highlight
    code-font()
    margin 20px 0
    overflow-x auto
    position relative
    background-color #f8f8fc
    padding 25px 15px
    table, tr, td
      width 100%
      border-collapse collapse
      padding 0
      margin 0
    .gutter
      user-select none
      width 1.5em
      padding-right 10px
    &.html, &.js, &.bash, &.css
      .code:after
        font-family 'Roboto'
        position absolute
        top 0
        right 5px
        color #666
        text-align right
        font-size .70em
        padding 5px 10px 0
        letter-spacing 1.5px
        line-height 15px
        height 15px
        font-weight 600
      &.html .code:after
        content 'HTML'
      &.js .code:after
        content 'JS'
      &.bash .code:after
        content 'Shell'
      &.css .code:after
        content 'CSS'

  > table
    width 100%
    margin 20px 0
    tr
      border-top 1px solid #eee
      &:nth-child(2n)
        background-color #f8f8f8
    th
      font-family 'Roboto'
      padding 12px 13px
    th, td
      border 1px solid #eee
      vertical-align middle
    td
      padding 6px 13px
      code-font()
      
  .main-container
    display inline-block
    
  .box-container 
    margin-bottom 0!important
    background rgba(#2990EA, 0.2)!important
    .box-row, .box-first, .box-nested
      margin-bottom 0!important
      background rgba(#2990EA, 0.5);

  .box, .box-first, .box-large, .box-nested, .box-row
    position relative
    box-sizing border-box
    min-height 22px
    margin-bottom 15px
    background rgba(#2990EA, 1);
    border-radius 2px
    overflow hidden
    text-align center
    color #fff
    padding 1rem
    

  .box-large 
    height 100px

  .bottom-nav
    margin 30px 0 25px
    border-bottom 1px solid #eee
    padding-bottom 25px
    min-height 46px 
    a
      font-family 'Roboto'
      margin 0 5px
      display inline-block

  .edit-link
    text-align center
    a
      color #aaa
      font-family 'Roboto'
      &:before
        content ''
        display inline-block
        width 16px
        height 16px
        background url(../images/gh.png) center center no-repeat
        background-size 16px
        opacity 0.3
        margin-right 8px
        position relative
        top 2px
  .notstylish
    margin 0
    padding 0
    border 0
    .anchor
      display none
      
  h1.nostylish 
    font-size 50px
  h2.nostylish 
    font-size 42px
  h3.nostylish 
    font-size 36px
  h4.nostylish 
    font-size 30px
  h5.nostylish 
    font-size 24px
  h6.nostylish 
    font-size 15px

  .breadcrumb
    background #f8f8fc
    border-radius 3px
    ul
      padding 6px 12px!important
      list-style none!important
      margin 0!important
  
  .last-xs, .first-xs
    .box-nested
      opacity .4
      color #212121