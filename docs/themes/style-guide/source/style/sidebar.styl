#logo-bar
  position fixed
  left 0
  top 0
  background #196acc
  color #fff
  width 240px
  a
    display block
    padding 10px 0
  img
    max-width 200px
    display table
    margin 0 auto
#sidebar
  font-family 'Roboto'
  border-right 1px solid #eee
  font-size 16px
  line-height 1.1em
  width 240px
  padding 20px 0
  li
    margin-bottom 0
  a
    color #20212B
    padding 4px 20px
    cursor pointer
    
    &.current, &:hover
      color #196ACC
      
    &.H2
      font-weight bold

  .categories > li > p
    margin-top 1.5em
    border-top 1px solid #eee
    text-transform uppercase
    padding-top 1.2em
    margin-bottom 1em
    color #999
    font-size 0.8em
    padding-left 20px
    padding-right 20px

  .sub-menu
    font-family 'ProximaNova-Regular'
    padding-left 20px
    margin .6em 0
    font-size 14px
    .active
      position relative
      color #196ACC
      &:before
        content ""
        position absolute
        top 8px
        left -15px
        display inline-block
        width 0
        height 0
        border-top 4px solid transparent
        border-bottom 4px solid transparent
        border-left 6px solid #196ACC

#sidebar-mobile
  display none
  margin-bottom 20px
  .search-box
    width 200px
    margin-bottom 20px
